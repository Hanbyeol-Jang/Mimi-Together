<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/form_label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회식명"
        app:layout_constraintBottom_toTopOf="@+id/form_label2"
        app:layout_constraintStart_toStartOf="@+id/form_label2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/form_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지역"
        app:layout_constraintBottom_toTopOf="@+id/form_label3"
        app:layout_constraintStart_toStartOf="@+id/form_label3"
        app:layout_constraintTop_toBottomOf="@+id/form_label1" />

    <TextView
        android:id="@+id/form_label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원수"
        app:layout_constraintBottom_toTopOf="@+id/form_label4"
        app:layout_constraintStart_toStartOf="@+id/form_label4"
        app:layout_constraintTop_toBottomOf="@+id/form_label2" />

    <TextView
        android:id="@+id/form_label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="금액"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/form_label3" />

    <EditText
        android:id="@+id/form_input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/form_label1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/form_label1" />

    <EditText
        android:id="@+id/form_input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/form_label2"
        app:layout_constraintStart_toStartOf="@+id/form_input1"
        app:layout_constraintTop_toTopOf="@+id/form_label2"
        app:layout_constraintVertical_bias="0.461" />

    <EditText
        android:id="@+id/form_input3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/form_label3"
        app:layout_constraintStart_toStartOf="@+id/form_input2"
        app:layout_constraintTop_toTopOf="@+id/form_label3" />

    <EditText
        android:id="@+id/form_input4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="@+id/form_label4"
        app:layout_constraintStart_toStartOf="@+id/form_input3"
        app:layout_constraintTop_toTopOf="@+id/form_label4" />

</androidx.constraintlayout.widget.ConstraintLayout>